<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title>경상북도 고령군 코로나19 검사현황</title>
  <style>
    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      margin: 20px;
      background: #f9fafc;
      color: #2c3e50;
    }
    h1 {
      text-align: center;
      color: #34495e;
      font-size: 2rem;
      margin-bottom: 30px;
    }
    .btn-container {
      text-align: center;
      margin-bottom: 20px;
    }
    button {
      background: #3498db;
      border: none;
      color: #fff;
      padding: 12px 20px;
      margin: 5px;
      border-radius: 6px;
      font-size: 1rem;
      cursor: pointer;
      transition: 0.3s;
      box-shadow: 0 3px 6px rgba(0,0,0,0.1);
    }
    button:hover {
      background: #2980b9;
      transform: translateY(-2px);
    }
    table {
      border-collapse: collapse;
      width: 100%;
      margin-top: 20px;
      background: #fff;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      border-radius: 8px;
      overflow: hidden;
    }
    th, td {
      border: 1px solid #eee;
      padding: 10px;
      text-align: center;
    }
    th {
      background: #3498db;
      color: #fff;
      font-weight: 600;
    }
    tr:nth-child(even) {
      background: #f8faff;
    }
    #table-container {
      margin-top: 20px;
      overflow-x: auto;
    }
  </style>
</head>
<body>
  <h1>경상북도 고령군 코로나19 검사현황</h1>
  <div class="btn-container">
    <button onclick="fetchData()">📊 데이터 불러오기</button>
    <button onclick="downloadCSV()">💾 CSV 저장</button>
  </div>
  <div id="table-container"></div>

  <script>
    const API_URL = "https://api.odcloud.kr/api/15065039/v1/uddi:50586d19-36a2-4b44-9764-9b6f80965c78";
    const API_KEY = "";
    let globalData = [];

    async function fetchData() {
      try {
        const res = await fetch(`${API_URL}?page=1&perPage=100&serviceKey=${API_KEY}&returnType=JSON`);
        if (!res.ok) throw new Error("API 요청 실패");
        const json = await res.json();
        globalData = json.data;
        renderTable(globalData);
      } catch (err) {
        alert("데이터 불러오기 오류: " + err.message);
      }
    }

    function renderTable(data) {
      if (!data || data.length === 0) {
        document.getElementById("table-container").innerHTML = "<p>데이터 없음</p>";
        return;
      }
      let html = "<table><thead><tr>";
      Object.keys(data[0]).forEach(key => {
        html += `<th>${key}</th>`;
      });
      html += "</tr></thead><tbody>";
      data.forEach(row => {
        html += "<tr>";
        Object.values(row).forEach(val => {
          html += `<td>${val}</td>`;
        });
        html += "</tr>";
      });
      html += "</tbody></table>";
      document.getElementById("table-container").innerHTML = html;
    }

    function downloadCSV() {
      if (!globalData.length) {
        alert("먼저 데이터를 불러오세요!");
        return;
      }
      const keys = Object.keys(globalData[0]);
      const rows = globalData.map(obj => keys.map(k => `"${obj[k] || ""}"`).join(","));
      const csvContent = [keys.join(","), ...rows].join("\n");

      const blob = new Blob([csvContent], { type: "text/csv;charset=utf-8;" });
      const link = document.createElement("a");
      link.href = URL.createObjectURL(blob);
      link.download = "goryeong_covid19.csv";
      link.click();
    }
  </script>
</body>
</html>
